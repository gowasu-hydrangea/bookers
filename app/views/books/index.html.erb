<h1>Books</h1>

<% @books.each do |book| %>

  <p>本のTitle</p>
  <span><%= book.title %></span>
  
  <p>感想</p>
  <span><%= book.body %></span>
  
<% end %>

<h1>New Book</h1>
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>本のTitle</h4>
  <%= f.text_field :title %>
	
  <h4>感想</h4>
  <%= f.text_area :body %>
	
  <%= f.submit '投稿' %>
<% end %>